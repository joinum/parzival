<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="announcement-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">

    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>

    <%= label f, :text %>
    <%= text_input f, :text %>
    <%= error_tag f, :text %>

    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>