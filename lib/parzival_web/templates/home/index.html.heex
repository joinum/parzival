<div class="flex flex-row mt-10 sm:mt-20 lg:mt-48 h-[740px]">
    <div class="absolute transform -rotate-90 -translate-x-40 translate-y-48 md:-translate-x-44">
        <span class="title">
            Schedule
        </span>
    </div>

    <div x-data="{ date: new Date().getDay() < 2 || new Date().getDay() > 4 ? 2 : new Date().getDay() }" class="relative hidden w-full 1.5xl:block">
        <img class="absolute -right-24 w-[1200px] h-[740px]" src={Routes.static_path(@conn, "/images/cords/schedule_cords.svg")} alt="hero cords"/>

        <%= for {day, index} <- Enum.with_index(@conn.assigns.event_dates) do %>
            <button @click={" date = #{Calendar.strftime(day, "%u")} "} class={"bg-[#BB2A22] absolute select-none w-40 py-2 text-lg  text-center text-white border-4 border-white rounded-full h-14 #{if index == 0 do "right-[704px]" else if index == 1 do "right-[433px]" else "right-40" end end}  top-5"}>
                <%= Calendar.strftime(day, "%d of %B") %>
            </button>
        <% end %>

        <%= for {day, index} <- Enum.with_index([:tuesday,:wednesday,:thursday]) do %>
            <div x-show={"date == #{index + 2}"} class="absolute right-0 grid grid-cols-5 p-10 gap-x-8 gap-y-6 top-32">
                <% next_activity = ParzivalWeb.HomeController.get_next_activity(@conn.assigns.schedule, day) %>
                <%# <% next_activity = Enum.min_by( Enum.reduce( Map.get(@conn.assigns.schedule, day), [], fn x, acc -> if NaiveDateTime.compare(NaiveDateTime.utc_now(), x.hours) == :lt do acc ++ [x.hours] else acc end end ), &abs(NaiveDateTime.diff(&1,NaiveDateTime.utc_now()))) %>
                <%= for activity <- Map.get(@conn.assigns.schedule, day) do %>
                    <div class={"#{if activity.hours == next_activity do "border-2 border-white" end} #{if NaiveDateTime.compare(NaiveDateTime.utc_now(), activity.hours) == :lt do "bg-[#E0483F]" else "bg-[#BB2A22]" end}  w-36 h-44 rounded-3xl relative -z-10"}>
                        <span class="text-white">
                            <p class="absolute w-32 text-sm font-light top-4 left-3">
                                <%= if String.length(activity.title) < 50 do activity.title else String.slice(activity.title, 0..48) <> "... "  end %>
                            </p>
                            <p class="absolute w-32 font-bold text-md top-[105px] left-3">
                                <%= Calendar.strftime(activity.hours, "%Hh%M") %>
                            </p>
                            <%= if activity.speaker do %>
                                <p class="absolute w-32 font-light text-sm top-[131px] left-3">
                                    <%= if String.length(activity.speaker) < 16 do activity.speaker else String.slice(activity.speaker, 0..14) <> "... "  end %>
                                </p>
                            <% end %>
                            <%= if activity.company do %>
                                <p class="absolute w-32 font-light text-sm top-[145px] left-3">
                                    <%= if String.length(activity.company) < 16 do activity.company else String.slice(activity.company, 0..14) <> "... "  end %>
                                </p>
                            <% end %>
                        </span>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>

<div class="flex flex-row mt-10 sm:mt-20 lg:mt-48">
    <div class="absolute transform -rotate-90 -translate-x-40 translate-y-40 md:-translate-x-44">
        <span class="title">
            Sponsors
        </span>
    </div>
    <div class="relative flex flex-row-reverse w-full ml-20 lg:hidden sm:ml-24">
        <div class="flex flex-col w-full">
            <%= for {sponsors, index} <- Enum.with_index(@conn.assigns.sponsors) do %>
                <div class="bg-[#E0483F] flex flex-col rounded-3xl pt-4 pb-6 px-6 drop-shadow-[0_35px_35px_rgba(0,0,0,0.4)] my-4">
                    <span class="text-2xl font-bold text-white">
                        <%= if index == 0 do "Exclusive" else if index == 1 do "Gold" else if index == 2 do "Silver" else "Bronze" end end end %>
                    </span>
                    <div class={"grid gap-4 mt-2 #{if index == 0 do "grid-cols-1" else if index == 3 do "grid-cols-2 sm:grid-cols-3" else "grid-cols-2" end end}"}>
                        <%= for sponsor <- sponsors do %>
                            <img class={"#{if index == 0 do "w-56" else if index == 1 do "w-40" else if index == 2 do "w-32" else "w-24 sm:w-28" end end end}"} src={Routes.static_path(@conn, "/images/sponsors/#{sponsor}.svg")} alt={sponsor}/>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="relative flex-row-reverse hidden w-full -mt-4 lg:flex ml-36 xl:ml-52">
        <div class="flex flex-row w-full">
            <%= for {sponsor_table, table_index} <- Enum.with_index(@conn.assigns.sponsors_table) do %>
                <div class="flex flex-col w-full ml-2 xl:mx-2">
                    <%= for {sponsor_box, box_index} <- Enum.with_index(sponsor_table) do %>
                        <div class={"bg-[#E0483F] flex flex-col rounded-3xl pt-4 pb-6 px-6 drop-shadow-[0_35px_35px_rgba(0,0,0,0.4)] mx-2 xl:mx-4 mb-4 #{if table_index == 1 && box_index == 0 do "mt-24" end}"}>
                            <span class="text-2xl font-bold text-white">
                                <%= if table_index == 0 && box_index == 0 do "Exclusive" else if table_index == 1 && box_index == 0 do "Gold" else if table_index == 0 && box_index == 1 do "Silver" else "Bronze" end end end %>
                            </span>
                            <div class={"grid #{if table_index == 0 && box_index == 0 do "grid-cols-1" else if table_index == 1 && box_index == 1 do "grid-cols-2 sm:grid-cols-3" else "grid-cols-2" end end} gap-4 mt-2"}>
                                <%= for sponsor <- sponsor_box do %>
                                    <img class={"#{if table_index == 0 && box_index == 0 do "w-56" else if table_index == 1 && box_index == 0 do "w-40" else if table_index == 0 && box_index == 1 do "w-32" else "w-28" end end end}"} src={Routes.static_path(@conn, "/images/sponsors/#{sponsor}.svg")} alt={sponsor}/>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>

<div class="flex flex-row mt-10 sm:mt-20 lg:mt-48">
    <div class="absolute transform -rotate-90 -translate-x-40 translate-y-40 md:-translate-x-44">
