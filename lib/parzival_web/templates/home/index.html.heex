                        <img class="absolute w-[95%] md:w-[96%] -z-20 right-0 bottom-0 rounded-2xl sm:rounded-3xl" src={Routes.static_path(@conn, "/images/speakers/#{String.replace(speaker.name," ","_")}.png")} alt={speaker.name}/>
                    </div>
                    <div class="pt-2 pl-2 text-white sm:pl-6">
                        <p class="overflow-hidden text-base font-bold sm:text-lg text-ellipsis whitespace-nowrap">
                            <%= speaker.name %>
                        </p>
                        <p class="-mt-1 overflow-hidden text-xs sm:text-sm text-ellipsis">
